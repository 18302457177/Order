<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.man.RegisterManActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/register_man_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ThemeRed"
        app:navigationIcon="@drawable/back"
        app:title="注册商家"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/register_man_tx"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="45dp"
                android:src="@drawable/upimg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="订 餐 外 卖"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="让生活变得简单，让美食送上家门"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/register_man_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:hint="请输入店铺账号" />

            <EditText
                android:id="@+id/register_man_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="请输入店铺密码"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/register_man_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="请输入店铺名称" />

            <EditText
                android:id="@+id/register_man_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="请输入店铺描述"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:gravity="top"
                android:maxLines="5"
                android:scrollbars="vertical"
                android:background="@android:drawable/edit_text"/>

            <EditText
                android:id="@+id/register_man_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="请输入店铺类型" />

            <Button
                android:id="@+id/register_man_zcsj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/ThemeRed"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="登录"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>